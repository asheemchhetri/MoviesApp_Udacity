<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivityFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_view_container">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:text="Favorite Movies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frontapp_title"
                android:textStyle="bold"
                android:textSize="25dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/frontapp_title"
                android:layout_alignParentStart="true"
                android:id="@+id/movie_options"
                android:rowCount="5"
                android:columnCount="2" >

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="220dp"
                    android:id="@+id/Option_1"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/rsz_movie1"
                    android:clickable="true"
                    android:tag="0"/>

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="220dp"
                    android:id="@+id/Option_2"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:src="@drawable/movie2"
                    android:layout_marginTop="40dp"
                    android:clickable="true"
                    android:tag="1" />


                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="220dp"
                    android:id="@+id/Option_3"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:src="@drawable/movie4"
                    android:clickable="true"
                    android:tag="2" />

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="220dp"
                    android:id="@+id/Option_4"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:src="@drawable/rsz_movie5"
                    android:clickable="true"
                    android:tag="3" />

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="220dp"
                    android:id="@+id/Option_6"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:src="@drawable/rsz_movie7"
                    android:clickable="true"
                    android:tag="4" />

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="220dp"
                    android:id="@+id/Option_7"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:src="@drawable/rsz_movie8"
                    android:clickable="true"
                    android:tag="5" />

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="220dp"
                    android:id="@+id/Option_8"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:src="@drawable/rsz_movie9"
                    android:clickable="true"
                    android:tag="6" />

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="220dp"
                    android:id="@+id/Option_9"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:src="@drawable/rsz_movie10"
                    android:clickable="true"
                    android:tag="7" />

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="220dp"
                    android:id="@+id/Option_11"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:src="@drawable/movie11"
                    android:clickable="true"
                    android:tag="8" />

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="220dp"
                    android:id="@+id/Option_12"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:src="@drawable/movie12"
                    android:clickable="true"
                    android:tag="9" />

            </GridLayout>
        </FrameLayout>
    </ScrollView>

</RelativeLayout>
