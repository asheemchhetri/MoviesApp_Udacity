<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_view_container">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:text="Favorite Movies" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frontapp_title"
                android:textStyle="bold"
                android:textSize="25dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/frontapp_title"
                android:layout_alignParentStart="true"
                android:layout_marginTop="21dp"
                android:id="@+id/movie_options"
                android:rowCount="4"
                android:columnCount="3">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/Option_1"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:src="@drawable/rsz_movie1"
                    android:layout_marginLeft="-2dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="15dp"
                    android:clickable="true"
                    android:tag="Option 1"/>

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/Option_2"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:src="@drawable/movie2"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="15dp"
                    android:clickable="true"
                    android:tag="Option 2" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/Option_3"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:src="@drawable/rsz_movie3"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="15dp"
                    android:clickable="true"
                    android:tag="Option 3" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/Option_4"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:src="@drawable/movie4"
                    android:layout_marginLeft="-2dp"
                    android:layout_marginBottom="6dp"
                    android:clickable="true"
                    android:tag="Option 4" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/Option_5"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:src="@drawable/rsz_movie5"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="6dp"
                    android:clickable="true"
                    android:tag="Option 5" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/Option_6"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:src="@drawable/movie6"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="6dp"
                    android:clickable="true"
                    android:tag="Option 6" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/Option_7"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:src="@drawable/rsz_movie7"
                    android:layout_marginLeft="-2dp"
                    android:layout_marginBottom="6dp"
                    android:clickable="true"
                    android:tag="Option 7" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/Option_8"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:src="@drawable/rsz_movie8"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="6dp"
                    android:clickable="true"
                    android:tag="Option 8" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/Option_9"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:src="@drawable/rsz_movie9"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="6dp"
                    android:clickable="true"
                    android:tag="Option 9" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/Option_10"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:src="@drawable/rsz_movie10"
                    android:layout_marginLeft="-2dp"
                    android:clickable="true"
                    android:tag="Option 10" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/Option_11"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:src="@drawable/movie11"
                    android:layout_marginLeft="6dp"
                    android:clickable="true"
                    android:tag="Option 11" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/Option_12"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:src="@drawable/movie12"
                    android:layout_marginLeft="6dp"
                    android:clickable="true"
                    android:tag="Option 12" />

            </GridLayout>
        </FrameLayout>
    </ScrollView>

</RelativeLayout>
