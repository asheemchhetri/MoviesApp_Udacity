<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mahes_000.moviesapp_udacity.Movie_DetailsActivityFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/story_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/story_detail_heading"
                android:layout_below="@+id/movie_title"
                android:layout_marginTop="20dp"
                android:textSize="25sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Story"
                android:layout_gravity="center_horizontal"
                android:id="@+id/movie_title"
                android:textSize="28sp"
                android:background="#1587ff"
                android:textColor="#fdf9ff"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:padding="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Story Overview"
                android:id="@+id/story_detail"
                android:layout_below="@+id/story_detail_heading"
                android:layout_alignParentStart="true"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Rating: "
                android:layout_below="@id/story_detail"
                android:id="@+id/user_rating_heading"
                android:layout_marginTop="25dp"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.5 / 10"
                android:id="@+id/user_rating_value"
                android:textSize="25sp"
                android:layout_alignTop="@+id/user_rating_heading"
                android:layout_toEndOf="@+id/user_rating_heading"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Release Date: "
                android:id="@+id/release_date"
                android:layout_below="@+id/user_rating_heading"
                android:layout_marginTop="20dp"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015"
                android:id="@+id/release_date_value"
                android:textSize="25sp"
                android:layout_alignTop="@+id/release_date"
                android:layout_toEndOf="@+id/release_date"
                android:layout_marginLeft="10dp" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
